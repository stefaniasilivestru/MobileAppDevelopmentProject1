<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- CardView to display the place -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TextView to display the place name -->
            <TextView
                android:id="@+id/text_place_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Place Name:"
                android:textSize="20sp"
                android:textColor="@color/primary_dark_color"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/text_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/primary_dark_color"
                android:layout_marginTop="5dp" />

            <!-- TextView to display the longitude -->
            <TextView
                android:id="@+id/text_longitude_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Longitude:"
                android:textSize="20sp"
                android:textColor="@color/primary_dark_color"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/text_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/primary_dark_color"
                android:layout_marginTop="5dp" />

            <!-- TextView to display the latitude -->
            <TextView
                android:id="@+id/text_latitude_label"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude:"
                android:textSize="20sp"
                android:textColor="@color/primary_dark_color"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/text_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/primary_dark_color"
                android:layout_marginTop="5dp" />


            <!-- Nested horizontal LinearLayout for buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">


                <!-- Button to view weather -->
                <Button
                    android:id="@+id/button_view_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Weather"
                    android:backgroundTint="@color/primary_dark_color"
                    android:textColor="@android:color/white"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />

                <!-- Button to delete place -->
                <Button
                    android:id="@+id/button_delete_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Place"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/white"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
